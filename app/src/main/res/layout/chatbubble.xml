<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bubble_layout_parent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_avatar1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/avatar_mini" />

    <LinearLayout
        android:id="@+id/bubble_layout"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Eve"
            android:textColor="#3187ce"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxEms="12"
            android:text="Hi! new message"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#cacaca"
            android:textSize="8sp" />

        <LinearLayout
            android:id="@+id/linear_emotion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/angry"
                android:onClick="cmd_emotion_Clicked"
                android:tag="angry" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/calm"
                android:onClick="cmd_emotion_Clicked"
                android:tag="calm" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/happy"
                android:onClick="cmd_emotion_Clicked"
                android:tag="happy" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/frustrated"
                android:onClick="cmd_emotion_Clicked"
                android:tag="frustrated" />

            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/sad"
                android:onClick="cmd_emotion_Clicked"
                android:tag="sad" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_bully"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_option"
                android:onClick="cmd_bully_Clicked"
                android:text="CYBERBULLIED"
                android:textAlignment="textStart"
                android:textColor="#005fd2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_bully_Clicked"
                android:text="CYBERBULLYING"
                android:textAlignment="textStart"
                android:textColor="#005fd2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_bully_Clicked"
                android:text="BULLIED"
                android:textAlignment="textStart"
                android:textColor="#005fd2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_bully_Clicked"
                android:text="BULLYING"
                android:textAlignment="textStart"
                android:textColor="#005fd2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_someone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_someone_Clicked"
                android:text="calling me"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#005fd2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_someone_Clicked"
                android:text="harassing me"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#005fd2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_someone_Clicked"
                android:text="telling bad things about me"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#005fd2" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_someone_Clicked"
                android:text="blackmailing me"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#005fd2" />
        </LinearLayout>

        <LinearLayout
