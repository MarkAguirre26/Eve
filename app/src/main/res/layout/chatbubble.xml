        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_stoAsk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:tag="1"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_stoAsk_Clicked"
                android:text="How to stop the bullying?"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#005fd2" />
            <Button
                android:tag="0"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_stoAsk_Clicked"
                android:text="Cheer me up"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#005fd2" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_suggest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_suggest_Clicked"
                android:text="Tell them to stop"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textColor="#005fd2" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_gravity="start"
                android:background="@drawable/button_option"
                android:onClick="cmd_suggest_Clicked"
                android:text="Ignore it"
                android:textAlignment="textStart"
